{
  "extends": "./tsconfig.base.json",
  "exclude": [
    "node_modules",
    "**/test/**/*.ts",
    "lib"
  ],
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2022",
    "strict": true,
    "lib": [
      "ES2021",
      "ES2022.Object",
      "DOM"
    ],
    "outDir": "lib",
    "rootDir": "./src"
  },
  "typedocOptions": {
    "entryPoints": [
      "src/index.ts"
    ]
  }
}
